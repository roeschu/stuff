#!/usr/bin/perl -w
#use strict;
use Net::SCP;
use Net::SSH qw(sshopen2);


my $folder = "/scptest";
my $user = "rocky";
my $host = "192.168.3.102";
my $cmd = "ls " . $folder . " >> /scptest/Zones";


sshopen2("$user\@$host", *READER, *WRITER, $cmd) || die "ssh: $!";

while (<READER>) 
{

#	opendir (VERZ,$folder);
#	@verzinhalt = readdir VERZ;
	#closedir (VERZ);
	#print @verzinhalt;

	

}

close (READER);
close (WRITER);
